<Application x:Class="MathOptimizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MathOptimizer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="WindowStyle">
            <Setter Property="Window.Margin" Value="5" />
            <Setter Property="Window.Padding" Value="5" />
            <Setter Property="Window.FontFamily" Value="Verdana" />
            <Setter Property="Window.Background" Value="LightSkyBlue" />
            <Setter Property="Window.Foreground" Value="DarkBlue" />
        </Style>
    </Application.Resources>
</Application>
